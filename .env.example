# ================================
# KaiaLink Backend Configuration
# ================================

# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE_NAME?schema=SCHEMA
# Example: postgresql://kaialink:password123@localhost:5432/kaialink?schema=public
DATABASE_URL=""
# JWT Configuration
# Generate a secure random string for JWT_SECRET (at least 32 characters)
# Example generators:
# - Node.js: require('crypto').randomBytes(32).toString('hex')
# - OpenSSL: openssl rand -hex 32
JWT_SECRET=""

# JWT Token Expiration
# Examples: "60s", "10m", "24h", "7d"
JWT_EXPIRES_IN="24h"

# Server Configuration
# Port for the backend server (default: 3001)
PORT=3001

# =================================
# Additional Optional Configuration
# =================================

# Enable/disable Swagger documentation (true/false)
ENABLE_SWAGGER=true

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Blockchain Network Configuration
# RPC endpoint for interacting with the blockchain
# BLOCKCHAIN_RPC_URL="https://your-blockchain-rpc-endpoint.com"